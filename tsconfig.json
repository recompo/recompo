{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "src/stories/*.tsx",
        "src/__tests__/*.test.tsx"
    ]
}